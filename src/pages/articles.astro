---
import { Fragment } from 'astro/jsx-runtime';
import BaseLayout from '@layouts/BaseLayout.astro';
import ContentExplorer from '@components/ContentExplorer.astro';
import { getContentItems } from '@data/content';

const title = 'Articles & Research';
const description = 'Timely translations, research articles, and thematic studies for the seeker of knowledge.';
const explorerTitle = 'Explore articles and research papers';

const allItems = getContentItems();
---
<BaseLayout {title} {description}>
  <Fragment slot="hero">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-primary/70">Knowledge hub</p>
      <h1 class="text-3xl font-semibold text-[var(--color-text)] sm:text-4xl">{title}</h1>
      <p class="max-w-3xl text-sm text-[var(--color-text)]/70">
        Dive into curated writings covering creed, methodology, fiqh, and current affairs. Use the filters to surface
        materials most relevant to your studies.
      </p>
    </div>
  </Fragment>

  <ContentExplorer items={allItems} initialCollections={['articles']} title={explorerTitle} />
</BaseLayout>
