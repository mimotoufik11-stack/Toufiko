---
import CollectionLayout from '../layouts/CollectionLayout.astro';
import ContentCard from '@components/ContentCard.astro';

const articles = [
  {
    title: 'Clarifying the Pillars of Islam',
    description: 'A succinct explanation of each pillar with evidences and practical advice.',
    href: '/articles/pillars-of-islam',
    badge: 'Fiqh'
  },
  {
    title: 'Understanding Bidâ€™ah in Light of the Sunnah',
    description: 'Frameworks from the Salaf on avoiding innovation while adhering to clear proofs.',
    href: '/articles/understanding-bidah',
    badge: 'Methodology'
  },
  {
    title: 'Principles of Authenticity in Hadith Sciences',
    description: 'A primer on hadith classifications and the preservation of the Sunnah.',
    href: '/articles/principles-of-authenticity',
    badge: 'Hadith'
  }
];
---
<CollectionLayout
  title="Articles & Research"
  description="Timely translations, research articles, and thematic studies for the seeker of knowledge."
>
  {articles.map((item) => (
    <ContentCard {...item} />
  ))}
</CollectionLayout>
