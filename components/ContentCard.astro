---
export interface Props {
  title: string;
  description: string;
  href: string;
  badge?: string;
  meta?: string;
}

const { title, description, href, badge, meta } = Astro.props;

if (!title || !href) {
  throw new Error('ContentCard requires `title` and `href` props.');
}
---
<a
  href={href}
  class="group flex h-full flex-col rounded-3xl border border-primary/10 bg-[var(--color-surface)] p-6 shadow-sm transition hover:-translate-y-1 hover:border-primary/40 hover:shadow-lg hover:shadow-primary/20 dark:bg-slate-900/50"
>
  <div class="flex items-center justify-between gap-3">
    <h3 class="text-lg font-semibold text-[var(--color-text)] transition group-hover:text-primary">
      {title}
    </h3>
    {badge && (
      <span class="rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.25em] text-primary">
        {badge}
      </span>
    )}
  </div>
  <p class="mt-3 text-sm text-[var(--color-text)]/70">
    {description}
  </p>
  {meta && (
    <p class="mt-4 text-xs text-[var(--color-text)]/50">
      {meta}
    </p>
  )}
</a>
