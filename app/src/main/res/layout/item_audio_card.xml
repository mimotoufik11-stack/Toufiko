<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/surface_dark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/thumbnail_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:background="@color/surface_dark_alt"
            android:contentDescription="@string/content_image" />

        <!-- Content Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="start" />

            <TextView
                android:id="@+id/author_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start"
                android:visibility="gone" />

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/gold_luxury"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/bg_gold_border"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="start"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Play Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_button"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_small"
            app:icon="@drawable/ic_play_circle"
            app:iconTint="@color/gold_luxury"
            app:backgroundTint="@color/surface_dark_alt" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>