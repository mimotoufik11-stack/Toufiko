---
import { Fragment } from 'astro/jsx-runtime';
import BaseLayout from '@layouts/BaseLayout.astro';
import ContentExplorer from '@components/ContentExplorer.astro';
import { getContentItems } from '@data/content';

const title = 'Structured Lesson Paths';
const description =
  'Progressive learning modules designed to help students build knowledge with clarity and methodology.';
const explorerTitle = 'Filter lessons and curricula';

const allItems = getContentItems();
---
<BaseLayout {title} {description}>
  <Fragment slot="hero">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-primary/70">Learning journeys</p>
      <h1 class="text-3xl font-semibold text-[var(--color-text)] sm:text-4xl">{title}</h1>
      <p class="max-w-3xl text-sm text-[var(--color-text)]/70">
        Use the search and filters to find lesson plans by subject, level, language, or scholar recommendation. The library
        updates automatically as new content is published.
      </p>
    </div>
  </Fragment>

  <ContentExplorer items={allItems} initialCollections={['lessons']} title={explorerTitle} />
</BaseLayout>
