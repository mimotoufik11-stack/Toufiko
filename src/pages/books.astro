---
import { Fragment } from 'astro/jsx-runtime';
import BaseLayout from '@layouts/BaseLayout.astro';
import ContentExplorer from '@components/ContentExplorer.astro';
import { getContentItems } from '@data/content';

const title = 'Recommended Books';
const description =
  'A curated reading pathway for students and families alike, highlighting authentic works with reliable commentary.';
const explorerTitle = 'Browse recommended books and reading lists';

const allItems = getContentItems();
---
<BaseLayout {title} {description}>
  <Fragment slot="hero">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-primary/70">Curated reading</p>
      <h1 class="text-3xl font-semibold text-[var(--color-text)] sm:text-4xl">{title}</h1>
      <p class="max-w-3xl text-sm text-[var(--color-text)]/70">
        These works have been carefully selected for authenticity and clarity. Filter by language, author, or focus area to
        discover texts that align with your current stage of study.
      </p>
    </div>
  </Fragment>

  <ContentExplorer items={allItems} initialCollections={['books']} title={explorerTitle} />
</BaseLayout>
