---
import MediaLayout from '../layouts/MediaLayout.astro';
import { Fragment } from 'astro/jsx-runtime';
import ContentCard from '@components/ContentCard.astro';

const lessons = [
  {
    title: 'Foundations of Tawheed',
    description: 'Step-by-step lessons covering the pillars of iman, shirk, and the testimony of faith.',
    href: '/lessons/foundations-of-tawheed',
    meta: '12 lessons • Beginner'
  },
  {
    title: 'Fiqh of Worship',
    description: 'Purification, prayer, fasting, and zakah explained with evidences from the Quran and Sunnah.',
    href: '/lessons/fiqh-of-worship',
    meta: '18 lessons • Intermediate'
  },
  {
    title: 'Forty Hadith of Imam an-Nawawi',
    description: 'Memorise and study the comprehensive hadith collection with reliable commentary.',
    href: '/lessons/forty-hadith',
    meta: '40 lessons • Memorisation'
  }
];

const filters = ['Creed', 'Fiqh', 'Hadith', 'Tazkiyah'];
---
<MediaLayout
  title="Structured Lesson Paths"
  description="Progressive learning modules designed to help students build knowledge with clarity and methodology."
  mediaType="lessons"
>
  <Fragment slot="filters">
    {filters.map((filter) => (
      <span class="rounded-full border border-primary/20 px-3 py-1 text-[var(--color-text)]/70">
        {filter}
      </span>
    ))}
  </Fragment>

  {lessons.map((item) => (
    <ContentCard {...item} badge="Curriculum" />
  ))}
</MediaLayout>
