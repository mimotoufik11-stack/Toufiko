---
import { Fragment } from 'astro/jsx-runtime';
import BaseLayout from '@layouts/BaseLayout.astro';
import ContentExplorer from '@components/ContentExplorer.astro';
import { getContentItems } from '@data/content';

const title = 'Audio Library';
const description =
  'Listen to translated lessons, khutbahs, and reminders from the scholars of the Sunnah.';
const explorerTitle = 'Discover audio series and reminders';

const allItems = getContentItems();
---
<BaseLayout {title} {description}>
  <Fragment slot="hero">
    <div class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-primary/70">Sound knowledge</p>
      <h1 class="text-3xl font-semibold text-[var(--color-text)] sm:text-4xl">{title}</h1>
      <p class="max-w-3xl text-sm text-[var(--color-text)]/70">
        Filter by topic, scholar, or language to access audio content suitable for personal study and community classes.
      </p>
    </div>
  </Fragment>

  <ContentExplorer items={allItems} initialCollections={['audio']} title={explorerTitle} />
</BaseLayout>
