---
import MediaLayout from '../layouts/MediaLayout.astro';
import { Fragment } from 'astro/jsx-runtime';
import ContentCard from '@components/ContentCard.astro';

const series = [
  {
    title: 'Explanation of Kitab at-Tawheed',
    description: 'Weekly lessons covering the seminal text with insights from senior scholars.',
    href: '/audio/kitab-at-tawheed-series',
    meta: '24 audio sessions'
  },
  {
    title: 'Tafsir Juz Amma',
    description: 'Concise tafsir of the short surahs for daily reflection and memorisation.',
    href: '/audio/tafsir-juz-amma',
    meta: '15 audio sessions'
  },
  {
    title: 'Purification of the Heart',
    description: 'Reminders focused on rectifying the heart with Qurâ€™anic guidance and hadith.',
    href: '/audio/purification-of-the-heart',
    meta: '10 audio reminders'
  }
];

const filters = ['Aqeedah', 'Tafsir', 'Tazkiyah'];
---
<MediaLayout
  title="Audio Library"
  description="Listen to translated lessons, khutbahs, and reminders from the scholars of the Sunnah."
  mediaType="audio"
>
  <Fragment slot="filters">
    {filters.map((filter) => (
      <span class="rounded-full border border-primary/20 px-3 py-1 text-[var(--color-text)]/70">
        {filter}
      </span>
    ))}
  </Fragment>

  {series.map((item) => (
    <ContentCard {...item} badge="Audio" />
  ))}
</MediaLayout>
