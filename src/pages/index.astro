---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Fragment } from 'astro/jsx-runtime';
import ContentCard from '@components/ContentCard.astro';
import PageHero from '@components/PageHero.astro';

const highlights = [
  {
    title: 'Structured Lessons',
    description: 'Follow sequential lesson plans that nurture a grounded understanding of creed, worship, and character.',
    href: '/lessons',
    badge: 'Lessons'
  },
  {
    title: 'Audio Library',
    description: 'Listen to translated lectures and reminders from trusted scholars and students of knowledge.',
    href: '/audio',
    badge: 'Audio'
  },
  {
    title: 'Scholarly Fatwas',
    description: 'Browse verdicts from the permanent committee and senior scholars on contemporary issues.',
    href: '/fatwas',
    badge: 'Guidance'
  }
];

const knowledgeStreams = [
  {
    title: 'Books',
    description: 'A curated library of reliable works—Arabic and translated—for the serious seeker.',
    href: '/books',
    badge: 'Library'
  },
  {
    title: 'Articles',
    description: 'In-depth articles, translations, and summaries grounded in the methodology of the Salaf.',
    href: '/articles',
    badge: 'Insights'
  },
  {
    title: 'Scholars',
    description: 'Biographies, timelines, and curated media from recognised scholars of the Salafi path.',
    href: '/scholars',
    badge: 'Profiles'
  }
];
---
<BaseLayout
  title="Salafi Science Network"
  description="Authentic knowledge, curated resources, and guided learning paths rooted in the methodology of the righteous predecessors."
>
  <Fragment slot="hero">
    <PageHero
      eyebrow="Learn with clarity"
      title="Authentic Islamic knowledge for every stage of the journey"
      description="Explore structured lessons, audio series, books, and scholarly resources that illuminate the path of the Salaf."
      cta={{ label: 'Start Learning', href: '/lessons' }}
      secondaryCta={{ label: 'View Resource Library', href: '/articles' }}
    />
  </Fragment>

  <section class="space-y-6">
    <header class="flex flex-col gap-2">
      <h2 class="text-2xl font-semibold text-[var(--color-text)]">Featured pathways</h2>
      <p class="text-sm text-[var(--color-text)]/70">
        Choose a track to begin learning with certainty.
      </p>
    </header>
    <div class="grid gap-6 md:grid-cols-3">
      {highlights.map((item) => (
        <ContentCard {...item} />
      ))}
    </div>
  </section>

  <section class="space-y-6">
    <header class="flex flex-col gap-2">
      <h2 class="text-2xl font-semibold text-[var(--color-text)]">Explore the library</h2>
      <p class="text-sm text-[var(--color-text)]/70">
        Dig deeper into texts, translations, and scholar biographies.
      </p>
    </header>
    <div class="grid gap-6 md:grid-cols-3">
      {knowledgeStreams.map((item) => (
        <ContentCard {...item} />
      ))}
    </div>
  </section>
</BaseLayout>
