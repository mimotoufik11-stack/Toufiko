<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/surface_dark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_small"
            android:scaleType="centerCrop"
            android:background="@color/surface_dark_alt"
            android:contentDescription="@string/content_image" />

        <!-- Type Indicator -->
        <ImageView
            android:id="@+id/type_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/margin_small"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_gold_border"
            android:padding="4dp"
            android:src="@drawable/ic_book" />

        <!-- Text Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/overlay_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold_luxury"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/author_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:visibility="gone" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>